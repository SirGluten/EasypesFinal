<div class="container" style="margin:50px auto"> {{!saludo al usuario}}
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuario}}!<a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion <i
                        class="fa-solid fa-arrow-right-from-bracket"></i></a></p>
        </div>
    </div>
    {{!novedades}}
    <div class="row">
        <div class="col-md-8">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-2">
            <a href="/admin/novedades/agregar" class="btn btn-success">Nuevo <i class="fa fa-plus"></i></a>
        </div>
        {{!tabla de novedades}}
        <div class="col-3 text-right">
            <form class="d-flex" action="/admin/novedades" method="get">
                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}value="{{q}}"{{/if}}>
                <button class="btn btn-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
        {{!tabla}}
        <div class="row" style="margin-top: 20px;">
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td class="text-center">
                                {{!-- boton de editar --}}
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-pencil"></i></a>
                                {{!-- boton de eliminar --}}
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>